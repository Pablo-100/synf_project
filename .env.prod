# Production environment configuration
APP_ENV=prod
APP_DEBUG=0

# IMPORTANT: Générez une clé secrète unique avec: php bin/console secrets:generate-keys
# Utilisez: php -r "echo bin2hex(random_bytes(32));" pour générer un secret
APP_SECRET=CHANGEZ_CETTE_CLE_SECRETE_EN_PRODUCTION

# Database - À configurer selon votre hébergeur
DATABASE_URL="mysql://username:password@127.0.0.1:3306/database_name?serverVersion=8.0&charset=utf8mb4"

# Mailer - Configurez votre service d'email
MAILER_DSN=smtp://user:pass@smtp.example.com:465

# Messenger
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# CORS (si nécessaire)
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
