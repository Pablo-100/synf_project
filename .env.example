# Environnement (dev, prod)
APP_ENV=prod

# Mode debug (0 = désactivé, 1 = activé)
APP_DEBUG=0

# Clé secrète Symfony (générer avec: php -r "echo bin2hex(random_bytes(32));")
APP_SECRET=CHANGE_ME_IN_PRODUCTION

# URL de la base de données
# Format: mysql://user:password@host:port/database?serverVersion=X.X&charset=utf8mb4
DATABASE_URL="mysql://root:@127.0.0.1:3306/synf_project?serverVersion=8.0&charset=utf8mb4"

# URL par défaut pour la génération de liens (CLI, emails, etc.)
# En local: http://localhost:8000
# En production: https://votre-domaine.com
DEFAULT_URI=http://localhost

# Configuration Messenger (files d'attente)
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# Configuration Email
# null://null = désactivé
# smtp://user:pass@smtp.example.com:465 = SMTP
MAILER_DSN=null://null

# CORS (si nécessaire pour API)
# CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
