{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">
        <i class="bi bi-cart"></i> Mon Panier
    </h1>

    {% if cart is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Votre panier est vide.
        </div>
        <div class="text-center">
            <a href="{{ path('app_product_index') }}" class="btn btn-primary">
                <i class="bi bi-grid"></i> Découvrir nos produits
            </a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Articles ({{ cart|length }})</h5>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix unitaire</th>
                                        <th>Quantité</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for id, item in cart %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if item.product.image %}
                                                        <img src="{{ asset('uploads/' ~ item.product.image) }}" 
                                                             alt="{{ item.product.nom }}" 
                                                             style="width: 60px; height: 60px; object-fit: cover;" 
                                                             class="rounded me-3">
                                                    {% else %}
                                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-3" 
                                                             style="width: 60px; height: 60px;">
                                                            <i class="bi bi-image text-white"></i>
                                                        </div>
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ item.product.nom }}</strong>
                                                        <br>
                                                        <small class="text-muted">{{ item.product.categorie }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{{ item.product.prix|number_format(2, ',', ' ') }} €</td>
                                            <td>
                                                <form method="post" action="{{ path('app_cart_update', {id: id}) }}" class="d-inline">
                                                    <div class="input-group" style="width: 120px;">
                                                        <input type="number" 
                                                               name="quantity" 
                                                               value="{{ item.quantity }}" 
                                                               min="1" 
                                                               max="{{ item.product.stock }}"
                                                               class="form-control form-control-sm">
                                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-check"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td>
                                                <strong>{{ (item.product.prix * item.quantity)|number_format(2, ',', ' ') }} €</strong>
                                            </td>
                                            <td>
                                                <a href="{{ path('app_cart_remove', {id: id}) }}" 
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Retirer cet article du panier ?')">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-end mt-3">
                            <a href="{{ path('app_cart_clear') }}" 
                               class="btn btn-outline-danger"
                               onclick="return confirm('Vider complètement le panier ?')">
                                <i class="bi bi-trash"></i> Vider le panier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Récapitulatif</h5>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Sous-total :</span>
                            <strong>{{ total|number_format(2, ',', ' ') }} €</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Livraison :</span>
                            <strong class="text-success">Gratuite</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Total :</h5>
                            <h5 class="text-primary">{{ total|number_format(2, ',', ' ') }} €</h5>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_cart_checkout') }}" class="btn btn-primary btn-lg">
                                <i class="bi bi-credit-card"></i> Passer la commande
                            </a>
                            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Continuer mes achats
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
