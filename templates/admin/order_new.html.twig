{% extends 'base.html.twig' %}

{% block title %}Nouvelle Commande{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    <!-- Header Premium -->
    <div class="page-header-premium mb-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center gap-3">
                    <div class="header-icon-box bg-success">
                        <i class="bi bi-plus-circle-fill"></i>
                    </div>
                    <div>
                        <h1 class="display-5 mb-1 fw-bold">Nouvelle Commande</h1>
                        <p class="text-muted mb-0">
                            <i class="bi bi-file-earmark-plus me-2"></i>Créer une commande manuellement
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-end">
                <a href="{{ path('app_admin_orders') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour aux commandes
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card-premium">
                <div class="card-premium-body">
                    {{ form_start(form) }}
                        <div class="form-section-premium mb-4">
                            <div class="section-header-premium mb-4">
                                <i class="bi bi-person-circle me-2"></i>
                                <h3>Informations Client</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group-premium">
                                        <label class="form-label-premium">
                                            <i class="bi bi-person me-2"></i>{{ form_label(form.user) }}
                                        </label>
                                        {{ form_widget(form.user, {'attr': {'class': 'form-control-premium'}}) }}
                                        {{ form_errors(form.user) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-premium">
                                        <label class="form-label-premium">
                                            <i class="bi bi-circle-fill me-2"></i>{{ form_label(form.statut) }}
                                        </label>
                                        {{ form_widget(form.statut, {'attr': {'class': 'form-control-premium'}}) }}
                                        {{ form_errors(form.statut) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-section-premium mb-4">
                            <div class="section-header-premium mb-4">
                                <i class="bi bi-currency-euro me-2"></i>
                                <h3>Détails Financiers</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group-premium">
                                        <label class="form-label-premium">
                                            <i class="bi bi-cash me-2"></i>{{ form_label(form.montantTotal) }}
                                        </label>
                                        {{ form_widget(form.montantTotal, {'attr': {'class': 'form-control-premium'}}) }}
                                        {{ form_errors(form.montantTotal) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-section-premium mb-4">
                            <div class="section-header-premium mb-4">
                                <i class="bi bi-geo-alt me-2"></i>
                                <h3>Livraison & Notes</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-12">
                                    <div class="form-group-premium">
                                        <label class="form-label-premium">
                                            <i class="bi bi-house me-2"></i>{{ form_label(form.adresseLivraison) }}
                                        </label>
                                        {{ form_widget(form.adresseLivraison, {'attr': {'class': 'form-control-premium', 'rows': 3}}) }}
                                        {{ form_errors(form.adresseLivraison) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group-premium">
                                        <label class="form-label-premium">
                                            <i class="bi bi-chat-text me-2"></i>{{ form_label(form.commentaire) }}
                                        </label>
                                        {{ form_widget(form.commentaire, {'attr': {'class': 'form-control-premium', 'rows': 3}}) }}
                                        {{ form_errors(form.commentaire) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions-premium">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-lg btn-premium-action'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header-premium {
            background: linear-gradient(135deg, rgba(34,197,94,0.08), rgba(134,239,172,0.08));
            padding: 2rem;
            border-radius: 20px;
            border-left: 5px solid #22c55e;
        }

        .header-icon-box {
            width: 70px;
            height: 70px;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

        .header-icon-box.bg-success {
            background: linear-gradient(135deg, #22c55e, #86efac);
        }

        .card-premium {
            background: var(--surface);
            border-radius: 24px;
            border: 2px solid var(--border-color);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .card-premium-body {
            padding: 2.5rem;
        }

        .form-section-premium {
            padding: 2rem;
            background: var(--background-alt);
            border-radius: 16px;
            border: 2px solid var(--border-color);
        }

        .section-header-premium {
            display: flex;
            align-items: center;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .section-header-premium i {
            color: var(--primary-color);
        }

        .form-group-premium {
            margin-bottom: 1.5rem;
        }

        .form-label-premium {
            display: flex;
            align-items: center;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 0.75rem;
        }

        .form-label-premium i {
            color: var(--primary-color);
        }

        .form-control-premium {
            width: 100%;
            padding: 0.875rem 1.125rem;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            font-size: 0.95rem;
            transition: var(--transition);
        }

        .form-control-premium:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(59,130,246,0.1);
        }

        .form-actions-premium {
            margin-top: 2rem;
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .btn-premium-action {
            padding: 1rem 2.5rem;
            border-radius: 14px;
            font-weight: 700;
            transition: var(--transition);
        }

        .btn-premium-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 32px rgba(34,197,94,0.4);
        }
    </style>
{% endblock %}