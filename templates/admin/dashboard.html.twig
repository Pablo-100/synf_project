    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuration commune pour les graphiques
            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            };

            // Graphique des Commandes par Statut (Donut)
            fetch('{{ path('app_admin_statistics_orders_status') }}')
                .then(response => response.json())
                .then(data => {
                    const ctx = document.getElementById('ordersStatusChart').getContext('2d');
                    
                    // Vérifier s'il y a des commandes
                    const totalOrders = data.data.reduce((a, b) => a + b, 0);
                    if (totalOrders === 0) {
                        ctx.canvas.parentElement.innerHTML = '<p class="text-center text-muted p-4">Aucune commande</p>';
                        return;
                    }
                    
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: data.labels,
                            datasets: [{
                                data: data.data,
                                backgroundColor: [
                                    '#fbbf24', // En attente - yellow
                                    '#3b82f6', // Validée - blue
