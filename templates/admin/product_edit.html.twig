{% extends 'base.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    <!-- Header avec gradient -->
    <div class="page-header mb-4">
        <div class="d-flex align-items-center gap-3">
            <div class="icon-wrapper">
                <i class="bi bi-pencil-square"></i>
            </div>
            <div>
                <h1 class="display-6 mb-0 fw-bold">Modifier le produit</h1>
                <p class="text-muted mb-0 small">
                    <i class="bi bi-tag me-1"></i>{{ product.nom }}
                </p>
            </div>
        </div>
    </div>

    <div class="card form-premium shadow-lg border-0">
        <div class="card-body p-4 p-lg-5">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'productForm'}}) }}
            <div class="row g-4">
                <!-- Colonne Principale -->
                <div class="col-lg-8">
                    <!-- Nom du Produit -->
                    <div class="form-field-group mb-4">
                        <label class="form-label-premium">
                            <i class="bi bi-tag-fill me-2"></i>{{ form.nom.vars.label }}
                            <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control-premium', 'placeholder': 'Ex: Tomates Bio du Jardin'}}) }}
                        {{ form_errors(form.nom) }}
                        <small class="form-text text-muted">Le nom apparaîtra sur la fiche produit</small>
                    </div>

                    <!-- Description -->
                    <div class="form-field-group mb-4">
                        <label class="form-label-premium">
                            <i class="bi bi-text-paragraph me-2"></i>{{ form.description.vars.label }}
                            <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control-premium', 'rows': 5, 'placeholder': 'Décrivez votre produit en détail: origine, qualités, utilisation...'}}) }}
                        {{ form_errors(form.description) }}
                        <small class="form-text text-muted">Une description détaillée aide vos clients à mieux connaître le produit</small>
                    </div>

                    <!-- Prix et Catégorie -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="form-field-group">
                                <label class="form-label-premium">
                                    <i class="bi bi-currency-euro me-2"></i>{{ form.prix.vars.label }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group input-group-premium">
                                    <span class="input-group-text border-0">
                                        <i class="bi bi-cash-coin"></i>
                                    </span>
                                    {{ form_widget(form.prix, {'attr': {'class': 'form-control-premium border-start-0', 'placeholder': '0.00'}}) }}
                                    <span class="input-group-text border-0 fw-bold">€</span>
                                </div>
                                {{ form_errors(form.prix) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-field-group">
                                <label class="form-label-premium">
                                    <i class="bi bi-folder-fill me-2"></i>{{ form.categorie.vars.label }}
                                    <span class="text-danger">*</span>
                                </label>
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-control-premium', 'placeholder': 'Ex: Légumes', 'list': 'categoriesList'}}) }}
                                <datalist id="categoriesList">
                                    <option value="Légumes">
                                    <option value="Fruits">
                                    <option value="Épicerie">
                                    <option value="Produits Laitiers">
                                    <option value="Viandes">
                                    <option value="Poissons">
                                    <option value="Boulangerie">
                                    <option value="Boissons">
                                </datalist>
                                {{ form_errors(form.categorie) }}
                            </div>
                        </div>
                    </div>

                    <!-- Stock et Disponibilité -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="form-field-group">
                                <label class="form-label-premium">
                                    <i class="bi bi-boxes me-2"></i>{{ form.stock.vars.label }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group input-group-premium">
                                    <span class="input-group-text border-0">
                                        <i class="bi bi-123"></i>
                                    </span>
                                    {{ form_widget(form.stock, {'attr': {'class': 'form-control-premium border-start-0', 'placeholder': '0'}}) }}
                                    <span class="input-group-text border-0 text-muted">unités</span>
                                </div>
                                {{ form_errors(form.stock) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-field-group">
                                <label class="form-label-premium d-block mb-2">
                                    <i class="bi bi-check-circle-fill me-2"></i>Statut
                                </label>
                                <div class="availability-toggle">
                                    {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input-premium', 'id': 'availabilitySwitch'}}) }}
                                    <label class="form-check-label-premium" for="availabilitySwitch">
                                        <span class="badge-status" id="statusBadge">Disponible</span>
                                    </label>
                                </div>
                                {{ form_errors(form.disponible) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Colonne Upload Image -->
                <div class="col-lg-4">
                    <div class="upload-section">
                        <label class="form-label-premium mb-3">
                            <i class="bi bi-image-fill me-2"></i>{{ form.imageFile.vars.label }}
                        </label>

                        <!-- Image actuelle -->
                        {% if product.image %}
                        <div class="current-image-wrapper mb-3">
                            <div class="current-image-badge">
                                <i class="bi bi-check-circle-fill me-1"></i>Image actuelle
                            </div>
                            <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.nom }}" class="current-image" id="currentImage">
                            <div class="current-image-overlay">
                                <button type="button" class="btn btn-sm btn-light rounded-pill" id="changeImageBtn">
                                    <i class="bi bi-arrow-repeat me-1"></i>Changer l'image
                                </button>
                            </div>
                        </div>
                        {% endif %}

                        <div id="dropzone" class="upload-dropzone-premium" style="{% if product.image %}display:none;{% endif %}">
                            <div class="upload-content" id="uploadContent">
                                <div class="dz-icon mb-3">
                                    <i class="bi bi-cloud-arrow-up-fill"></i>
                                </div>
                                <h5 class="mb-2">Glissez votre image ici</h5>
                                <p class="text-muted mb-3">ou</p>
                                <button type="button" class="btn btn-outline-primary rounded-pill px-4" id="browseBtn">
                                    <i class="bi bi-folder2-open me-2"></i>Parcourir les fichiers
                                </button>
                                <div class="mt-3">
                                    <small class="text-muted d-block">
                                        <i class="bi bi-info-circle me-1"></i>Formats: PNG, JPG, GIF, WebP
                                    </small>
                                    <small class="text-muted d-block">
                                        <i class="bi bi-file-earmark-image me-1"></i>Taille max: 2 Mo
                                    </small>
                                </div>
                            </div>
                            <div class="preview-wrapper" id="previewWrapper" style="display:none;">
                                <img id="imagePreview" alt="Aperçu"/>
                                <div class="preview-overlay">
                                    <button type="button" class="btn btn-sm btn-danger rounded-circle" id="removeBtn" title="Supprimer">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                                <div class="preview-info" id="previewInfo"></div>
                            </div>
                        </div>
                        {{ form_widget(form.imageFile, {'attr': {'class': 'd-none', 'id': 'imageInput'}}) }}
                        {{ form_errors(form.imageFile) }}
                        <small class="form-text text-muted mt-2 d-block">
                            <i class="bi bi-lightbulb me-1"></i>Laissez vide pour conserver l'image actuelle
                        </small>
                    </div>
                </div>
            </div>

            <!-- Actions Sticky -->
            <div class="form-actions-sticky">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_admin_products') }}" class="btn btn-light rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i>Retour
                    </a>
                    <div class="d-flex gap-2">
                        <button type="reset" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-clockwise me-2"></i>Réinitialiser
                        </button>
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-premium rounded-pill px-5'}}) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    <script>
        (function(){
            const dropzone = document.getElementById('dropzone');
            const input = document.getElementById('imageInput');
            const btn = document.getElementById('browseBtn');
            const preview = document.getElementById('imagePreview');
            const uploadContent = document.getElementById('uploadContent');
            const previewWrapper = document.getElementById('previewWrapper');
            const removeBtn = document.getElementById('removeBtn');
            const previewInfo = document.getElementById('previewInfo');
            const availSwitch = document.getElementById('availabilitySwitch');
            const statusBadge = document.getElementById('statusBadge');
            const changeImageBtn = document.getElementById('changeImageBtn');
            const currentImage = document.getElementById('currentImage');

            if(!dropzone || !input) return;

            // Show dropzone on "Change image" button click
            if(changeImageBtn && currentImage) {
                changeImageBtn.addEventListener('click', () => {
                    currentImage.closest('.current-image-wrapper').style.display = 'none';
                    dropzone.style.display = 'flex';
                });
            }

            // Toggle disponibilité avec badge animé
            if(availSwitch && statusBadge) {
                const updateStatus = () => {
                    if(availSwitch.checked) {
                        statusBadge.textContent = 'Disponible';
                        statusBadge.className = 'badge-status bg-success';
                    } else {
                        statusBadge.textContent = 'Indisponible';
                        statusBadge.className = 'badge-status bg-secondary';
                    }
                };
                availSwitch.addEventListener('change', updateStatus);
                updateStatus();
            }

            const showPreview = file => {
                // Validation taille
                const maxSize = 2 * 1024 * 1024; // 2MB
                if(file.size > maxSize) {
                    alert('⚠️ La taille du fichier dépasse 2 Mo. Veuillez choisir une image plus petite.');
                    input.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    uploadContent.style.display = 'none';
                    previewWrapper.style.display = 'block';
                    
                    // Info fichier
                    const sizeKB = (file.size / 1024).toFixed(1);
                    previewInfo.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-truncate">${file.name}</span>
                            <span class="badge bg-primary">${sizeKB} Ko</span>
                        </div>
                    `;
                    
                    // Animation
                    previewWrapper.style.animation = 'fadeInScale 0.3s ease';
                };
                reader.readAsDataURL(file);
            };

            const resetUpload = () => {
                input.value = '';
                uploadContent.style.display = 'block';
                previewWrapper.style.display = 'none';
                preview.src = '';
                previewInfo.innerHTML = '';
            };

            // Drag & Drop
            dropzone.addEventListener('dragover', e => { 
                e.preventDefault(); 
                dropzone.classList.add('dragover'); 
            });
            dropzone.addEventListener('dragleave', () => dropzone.classList.remove('dragover'));
            dropzone.addEventListener('drop', e => {
                e.preventDefault();
                dropzone.classList.remove('dragover');
                const file = e.dataTransfer.files && e.dataTransfer.files[0];
                if(file && file.type.startsWith('image/')) { 
                    input.files = e.dataTransfer.files; 
                    showPreview(file); 
                } else {
                    alert('⚠️ Veuillez déposer un fichier image valide.');
                }
            });

            // Browse button
            btn && btn.addEventListener('click', () => input.click());

            // File input change
            input.addEventListener('change', e => {
                const file = e.target.files && e.target.files[0];
                if(file) showPreview(file);
            });

            // Remove button
            removeBtn && removeBtn.addEventListener('click', resetUpload);

            // Form validation UX
            const form = document.getElementById('productForm');
            if(form) {
                form.addEventListener('submit', e => {
                    const requiredFields = form.querySelectorAll('[required]');
                    let isValid = true;
                    requiredFields.forEach(field => {
                        if(!field.value.trim()) {
                            field.classList.add('is-invalid');
                            isValid = false;
                        } else {
                            field.classList.remove('is-invalid');
                        }
                    });
                    
                    if(!isValid) {
                        e.preventDefault();
                        alert('⚠️ Veuillez remplir tous les champs obligatoires (marqués *)');
                    }
                });
            }
        })();
    </script>
{% endblock %}

