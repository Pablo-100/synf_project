{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    <!-- Header Premium avec Icône -->
    <div class="page-header-premium mb-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center gap-3">
                    <div class="header-icon-box bg-info">
                        <i class="bi bi-cart-check-fill"></i>
                    </div>
                    <div>
                        <h1 class="display-5 mb-1 fw-bold">Gestion des Commandes</h1>
                        <p class="text-muted mb-0">
                            <i class="bi bi-receipt me-2"></i>{{ orders|length }} commandes au total
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-end">
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left me-2"></i>Dashboard
                </a>
                <a href="{{ path('app_admin_order_new') }}" class="btn btn-info text-white">
                    <i class="bi bi-plus-circle me-2"></i>Nouvelle commande
                </a>
            </div>
        </div>
    </div>

    <!-- Filtres Premium -->
    <div class="filters-premium mb-4">
        <div class="row g-3">
            <div class="col-lg-4">
                <div class="search-box-premium">
                    <i class="bi bi-search search-icon-premium"></i>
                    <input type="text" id="searchOrders" class="form-control-premium" placeholder="Rechercher par numéro, client, email...">
                </div>
            </div>
            <div class="col-lg-3">
                <select id="filterStatus" class="form-select-premium">
                    <option value="">Tous les statuts</option>
                    <option value="en_attente">En attente</option>
                    <option value="validee">Validée</option>
                    <option value="en_preparation">En préparation</option>
                    <option value="livree">Livrée</option>
                    <option value="annulee">Annulée</option>
                </select>
            </div>
            <div class="col-lg-3">
                <select id="sortOrders" class="form-select-premium">
                    <option value="date_desc">Plus récentes</option>
                    <option value="date_asc">Plus anciennes</option>
                    <option value="amount_desc">Montant (décroissant)</option>
                    <option value="amount_asc">Montant (croissant)</option>
                </select>
            </div>
            <div class="col-lg-2">
                <button id="resetFilters" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-clockwise me-2"></i>Réinitialiser
                </button>
            </div>
        </div>
        <div class="filter-results mt-3">
            <span class="badge bg-primary" id="resultsCount">{{ orders|length }} commande(s)</span>
        </div>
    </div>

    {% if orders is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-cart-x"></i>
            </div>
            <h3>Aucune commande</h3>
            <p class="text-muted">Les commandes apparaîtront ici</p>
        </div>
    {% else %}
        <!-- Orders List -->
        <div id="ordersContainer">
        {% for order in orders %}
            <div class="order-card mb-4">
                <!-- Order Header -->
                <div class="order-header">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <div class="order-number">
                                <i class="bi bi-hash"></i>{{ order.numeroCommande }}
                            </div>
                            <div class="order-date">
                                <i class="bi bi-calendar3"></i>
                                {{ order.createdAt|date('d/m/Y H:i') }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="order-customer">
                                <i class="bi bi-person-circle"></i>
                                <div>
                                    <strong>{{ order.user.fullName }}</strong>
                                    <small class="d-block text-muted">{{ order.user.email }}</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 text-center">
                            <div class="order-total">
                                {{ order.montantTotal|number_format(2, ',', ' ') }} €
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            {% if order.statut == 'en_attente' %}
                                <span class="order-status status-waiting">En attente</span>
                            {% elseif order.statut == 'validee' %}
                                <span class="order-status status-validated">Validée</span>
                            {% elseif order.statut == 'en_preparation' %}
                                <span class="order-status status-preparing">En préparation</span>
                            {% elseif order.statut == 'livree' %}
                                <span class="order-status status-delivered">Livrée</span>
                            {% elseif order.statut == 'annulee' %}
                                <span class="order-status status-cancelled">Annulée</span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="order-body">
                    <table class="order-items-table">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th class="text-center">Prix unitaire</th>
                                <th class="text-center">Quantité</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.orderItems %}
                                <tr>
                                    <td><strong>{{ item.product.nom }}</strong></td>
                                    <td class="text-center">{{ item.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                    <td class="text-center">
                                        <span class="quantity-badge">{{ item.quantite }}</span>
                                    </td>
                                    <td class="text-end"><strong>{{ item.total|number_format(2, ',', ' ') }} €</strong></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Order Actions -->
                <div class="order-actions">
                    <a href="{{ path('app_admin_order_edit', {id: order.id}) }}" class="btn-order-action btn-edit">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                    {% if order.statut == 'en_attente' %}
                        <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'validee'}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                            <button type="submit" class="btn-order-action btn-validate" onclick="return confirm('Valider cette commande ?')">
                                <i class="bi bi-check-circle"></i> Valider
                            </button>
                        </form>
                    {% endif %}
                    {% if order.statut in ['en_attente', 'validee'] %}
                        <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'en_preparation'}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                            <button type="submit" class="btn-order-action btn-prepare" onclick="return confirm('Mettre en préparation ?')">
                                <i class="bi bi-truck"></i> Préparer
                            </button>
                        </form>
                    {% endif %}
                    {% if order.statut in ['en_attente', 'validee', 'en_preparation'] %}
                        <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'livree'}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                            <button type="submit" class="btn-order-action btn-deliver" onclick="return confirm('Marquer comme livrée ?')">
                                <i class="bi bi-check-all"></i> Livrer
                            </button>
                        </form>
                    {% endif %}
                    {% if order.statut != 'annulee' and order.statut != 'livree' %}
                        <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'annulee'}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                            <button type="submit" class="btn-order-action btn-cancel" onclick="return confirm('Annuler cette commande ?')">
                                <i class="bi bi-x-circle"></i> Annuler
                            </button>
                        </form>
                    {% endif %}
                    <form method="post" action="{{ path('app_admin_order_delete', {id: order.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete-order-' ~ order.id) }}">
                        <button type="submit" class="btn-order-action btn-delete" onclick="return confirm('⚠️ ATTENTION : Supprimer définitivement cette commande ?')">
                            <i class="bi bi-trash3"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
