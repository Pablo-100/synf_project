    .btn-prepare:hover { background: #3b82f6; color: white; transform: translateY(-2px); }

    .btn-deliver { background: #d1fae5; color: #065f46; }
    .btn-deliver:hover { background: #22c55e; color: white; transform: translateY(-2px); }

    .btn-cancel { background: #fef3c7; color: #78350f; }
    .btn-cancel:hover { background: #f59e0b; color: white; transform: translateY(-2px); }

    .btn-delete { background: #fee2e2; color: #991b1b; }
    .btn-delete:hover { background: #ef4444; color: white; transform: translateY(-2px); }
</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchOrders');
            const filterStatus = document.getElementById('filterStatus');
            const sortSelect = document.getElementById('sortOrders');
            const resetBtn = document.getElementById('resetFilters');
            const resultsCount = document.getElementById('resultsCount');
            const ordersContainer = document.getElementById('ordersContainer');
            
            let orders = Array.from(document.querySelectorAll('.order-card'));
            
            function filterAndSort() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusFilter = filterStatus.value;
                let visibleCount = 0;
                
                // Filter orders
                orders.forEach(order => {
                    const orderNumber = order.querySelector('.order-number')?.textContent.toLowerCase() || '';
                    const customerName = order.querySelector('.order-customer strong')?.textContent.toLowerCase() || '';
                    const customerEmail = order.querySelector('.order-customer small')?.textContent.toLowerCase() || '';
                    const orderStatus = order.querySelector('.order-status')?.className.match(/status-(\w+)/)?.[1] || '';
                    
                    const matchesSearch = !searchTerm || 
                        orderNumber.includes(searchTerm) ||
                        customerName.includes(searchTerm) ||
                        customerEmail.includes(searchTerm);
                    
                    const matchesStatus = !statusFilter || orderStatus === statusFilter.replace('status-', '');
                    
                    if (matchesSearch && matchesStatus) {
                        order.classList.remove('hidden');
                        order.style.display = '';
                        visibleCount++;
                    } else {
                        order.classList.add('hidden');
                        order.style.display = 'none';
                    }
                });
                
                // Sort orders
                const sortValue = sortSelect.value;
                orders.sort((a, b) => {
                    if (sortValue === 'date_desc') {
                        const dateA = new Date(a.querySelector('.order-date')?.textContent || 0);
                        const dateB = new Date(b.querySelector('.order-date')?.textContent || 0);
                        return dateB - dateA;
                    } else if (sortValue === 'date_asc') {
                        const dateA = new Date(a.querySelector('.order-date')?.textContent || 0);
                        const dateB = new Date(b.querySelector('.order-date')?.textContent || 0);
                        return dateA - dateB;
                    } else if (sortValue === 'amount_desc') {
                        const amountA = parseFloat(a.querySelector('.order-total')?.textContent.replace(/[^\d,]/g, '').replace(',', '.') || 0);
                        const amountB = parseFloat(b.querySelector('.order-total')?.textContent.replace(/[^\d,]/g, '').replace(',', '.') || 0);
                        return amountB - amountA;
                    } else if (sortValue === 'amount_asc') {
                        const amountA = parseFloat(a.querySelector('.order-total')?.textContent.replace(/[^\d,]/g, '').replace(',', '.') || 0);
                        const amountB = parseFloat(b.querySelector('.order-total')?.textContent.replace(/[^\d,]/g, '').replace(',', '.') || 0);
                        return amountA - amountB;
                    }
                    return 0;
                });
                
                // Re-append sorted orders
                orders.forEach(order => ordersContainer.appendChild(order));
                
                // Update count
                resultsCount.textContent = `${visibleCount} commande(s)`;
            }
            
            // Event listeners
            searchInput?.addEventListener('input', filterAndSort);
            filterStatus?.addEventListener('change', filterAndSort);
            sortSelect?.addEventListener('change', filterAndSort);
            
            resetBtn?.addEventListener('click', function() {
                searchInput.value = '';
                filterStatus.value = '';
                sortSelect.value = 'date_desc';
                filterAndSort();
            });
        });
    </script>
{% endblock %}
