{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5"><i class="bi bi-cart-check"></i> Gestion des Commandes</h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Toutes les Commandes ({{ orders|length }})</h4>
            <a href="{{ path('app_admin_order_new') }}" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Nouvelle commande
            </a>
        </div>
        <div class="card-body">
            {% if orders is empty %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aucune commande pour le moment.
                </div>
            {% else %}
                {% for order in orders %}
                    <div class="card mb-3">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <strong>Commande #{{ order.numeroCommande }}</strong>
                                </div>
                                <div class="col-md-3">
                                    <i class="bi bi-person"></i> {{ order.user.fullName }}
                                    <br>
                                    <small class="text-muted">{{ order.user.email }}</small>
                                </div>
                                <div class="col-md-2">
                                    {{ order.createdAt|date('d/m/Y H:i') }}
                                </div>
                                <div class="col-md-2">
                                    <strong class="text-success">{{ order.montantTotal|number_format(2, ',', ' ') }} €</strong>
                                </div>
                                <div class="col-md-2 text-end">
                                    {% if order.statut == 'en_attente' %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% elseif order.statut == 'validee' %}
                                        <span class="badge bg-info">Validée</span>
                                    {% elseif order.statut == 'en_preparation' %}
                                        <span class="badge bg-primary">En préparation</span>
                                    {% elseif order.statut == 'livree' %}
                                        <span class="badge bg-success">Livrée</span>
                                    {% elseif order.statut == 'annulee' %}
                                        <span class="badge bg-danger">Annulée</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Produit</th>
                                            <th>Prix unitaire</th>
                                            <th>Quantité</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in order.orderItems %}
                                            <tr>
                                                <td>{{ item.product.nom }}</td>
                                                <td>{{ item.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                                <td>{{ item.quantite }}</td>
                                                <td class="text-end">{{ item.total|number_format(2, ',', ' ') }} €</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                            <div class="btn-group btn-group-sm mt-2" role="group">
                                <a href="{{ path('app_admin_order_edit', {id: order.id}) }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                {% if order.statut == 'en_attente' %}
                                    <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'validee'}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                                        <button type="submit" class="btn btn-outline-info" onclick="return confirm('Valider cette commande ?')">
                                            <i class="bi bi-check"></i> Valider
                                        </button>
                                    </form>
                                {% endif %}
                                {% if order.statut in ['en_attente', 'validee'] %}
                                    <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'en_preparation'}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                                        <button type="submit" class="btn btn-outline-primary" onclick="return confirm('Mettre en préparation ?')">
                                            <i class="bi bi-truck"></i> En préparation
                                        </button>
                                    </form>
                                {% endif %}
                                {% if order.statut in ['en_attente', 'validee', 'en_preparation'] %}
                                    <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'livree'}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                                        <button type="submit" class="btn btn-outline-success" onclick="return confirm('Marquer comme livrée ?')">
                                            <i class="bi bi-check-all"></i> Livrer
                                        </button>
                                    </form>
                                {% endif %}
                                {% if order.statut != 'annulee' and order.statut != 'livree' %}
                                    <form method="post" action="{{ path('app_admin_order_status', {id: order.id, status: 'annulee'}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('order_status_' ~ order.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Annuler cette commande ?')">
                                            <i class="bi bi-x"></i> Annuler
                                        </button>
                                    </form>
                                {% endif %}
                                <form method="post" action="{{ path('app_admin_order_delete', {id: order.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-order-' ~ order.id) }}">
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('⚠️ ATTENTION : Supprimer définitivement cette commande ?')">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
