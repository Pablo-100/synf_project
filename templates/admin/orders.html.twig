    }

    .btn-order-action {
        padding: 0.6rem 1.25rem;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-edit { background: #dbeafe; color: #1e40af; }
    .btn-edit:hover { background: #3b82f6; color: white; transform: translateY(-2px); }

    .btn-validate { background: #bfdbfe; color: #1e3a8a; }
    .btn-validate:hover { background: #0ea5e9; color: white; transform: translateY(-2px); }

