{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5"><i class="bi bi-box-seam"></i> Gestion des Produits</h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au Dashboard
        </a>
    </div>

    <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Liste des Produits ({{ products|length }})</h4>
            <a href="{{ path('app_admin_product_new') }}" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Ajouter un produit
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Catégorie</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Disponible</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>
                                    {% if product.image %}
                                        <img src="/uploads/{{ product.image }}" alt="{{ product.nom }}" 
                                             style="width: 50px; height: 50px; object-fit: cover;" 
                                             class="rounded">
                                    {% else %}
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-image text-white"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td><strong>{{ product.nom }}</strong></td>
                                <td>
                                    <span class="badge bg-secondary">{{ product.categorie|capitalize }}</span>
                                </td>
                                <td><strong>{{ product.prix|number_format(2, ',', ' ') }} €</strong></td>
                                <td>
                                    {% if product.stock > 10 %}
                                        <span class="badge bg-success">{{ product.stock }}</span>
                                    {% elseif product.stock > 0 %}
                                        <span class="badge bg-warning">{{ product.stock }}</span>
                                    {% else %}
                                        <span class="badge bg-danger">0</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if product.disponible %}
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Oui</span>
                                    {% else %}
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Non</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_admin_product_delete', {id: product.id}) }}" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-product-' ~ product.id) }}">
                                            <button class="btn btn-outline-danger" onclick="return confirm('Supprimer ce produit ?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
