            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
        }

        .story-content strong {
            color: var(--text-primary);
        }

        /* Values Section */
        .section-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background: rgba(59,130,246,0.1);
            border-radius: 50px;
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.85rem;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: var(--text-secondary);
        }

        .value-card {
