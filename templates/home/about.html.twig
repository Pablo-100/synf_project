            border-radius: 20px;
            border: 2px solid var(--border-color);
            padding: 2.5rem;
            height: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .value-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

