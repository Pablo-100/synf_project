{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5"><i class="bi bi-bag-check"></i> Mes Commandes</h1>
        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-bag-check"></i> Toutes mes Commandes</h3>
            <span class="badge bg-light text-dark">{{ orders|length }} commande(s)</span>
        </div>
                <div class="card-body">
                    {% if orders is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Vous n'avez aucune commande pour le moment.
                        </div>
                    {% else %}
                        {% for order in orders %}
                            <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>Commande #{{ order.numeroCommande }}</strong>
                                        <span class="text-muted ms-2">{{ order.createdAt|date('d/m/Y H:i') }}</span>
                                    </div>
                                    <div>
                                        {% if order.statut == 'en_attente' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% elseif order.statut == 'validee' %}
                                            <span class="badge bg-info">Validée</span>
                                        {% elseif order.statut == 'en_preparation' %}
                                            <span class="badge bg-primary">En préparation</span>
                                        {% elseif order.statut == 'livree' %}
                                            <span class="badge bg-success">Livrée</span>
                                        {% elseif order.statut == 'annulee' %}
                                            <span class="badge bg-danger">Annulée</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Produit</th>
                                                    <th>Prix unitaire</th>
                                                    <th>Quantité</th>
                                                    <th class="text-end">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for item in order.orderItems %}
                                                    <tr>
                                                        <td>{{ item.product.nom }}</td>
                                                        <td>{{ item.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                                        <td>{{ item.quantite }}</td>
                                                        <td class="text-end">{{ item.total|number_format(2, ',', ' ') }} €</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                            <tfoot>
                                                <tr class="fw-bold">
                                                    <td colspan="3" class="text-end">Total :</td>
                                                    <td class="text-end">{{ order.montantTotal|number_format(2, ',', ' ') }} €</td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
