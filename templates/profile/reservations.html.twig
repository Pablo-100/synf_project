{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5"><i class="bi bi-calendar-check"></i> Mes Réservations</h1>
        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-calendar-check"></i> Toutes mes Réservations</h3>
            <span class="badge bg-light text-dark">{{ reservations|length }} réservation(s)</span>
        </div>
                <div class="card-body">
                    {% if reservations is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Vous n'avez aucune réservation pour le moment.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Heure</th>
                                        <th>Personnes</th>
                                        <th>Statut</th>
                                        <th>Commentaire</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reservation in reservations %}
                                        <tr>
                                            <td>{{ reservation.dateReservation|date('d/m/Y') }}</td>
                                            <td>{{ reservation.heureReservation|date('H:i') }}</td>
                                            <td><i class="bi bi-people"></i> {{ reservation.nombrePersonnes }}</td>
                                            <td>
                                                {% if reservation.statut == 'en_attente' %}
                                                    <span class="badge bg-warning">{{ reservation.statutLabel }}</span>
                                                {% elseif reservation.statut == 'confirmee' %}
                                                    <span class="badge bg-success">{{ reservation.statutLabel }}</span>
                                                {% elseif reservation.statut == 'annulee' %}
                                                    <span class="badge bg-danger">{{ reservation.statutLabel }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ reservation.statutLabel }}</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ reservation.commentaire ?? '-' }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
