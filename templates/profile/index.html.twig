    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuration commune pour les graphiques
            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            };

            // Graphique des Commandes par Statut (Donut)
            fetch('{{ path('app_profile_orders_by_status') }}')
                .then(response => {
                    if (!response.ok || !response.headers.get('content-type')?.includes('application/json')) {
                        throw new Error('Erreur de chargement');
                    }
                    return response.json();
                })
                .then(data => {
                    const ctx = document.getElementById('ordersStatusChart').getContext('2d');
                    
                    // V√©rifier si l'utilisateur a des commandes
                    const totalOrders = data.data.reduce((a, b) => a + b, 0);
                    if (totalOrders === 0) {
                        ctx.canvas.parentElement.innerHTML = '<p class="text-center text-muted p-4">Aucune commande pour le moment</p>';
                        return;
                    }
                    
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: data.labels,
                            datasets: [{
                                data: data.data,
                                backgroundColor: [
                                    '#fbbf24', // En attente - yellow
                                    '#3b82f6', // Valid√©e - blue
                                    '#8b5cf6', // En pr√©paration - purple
                                    '#10b981', // Livr√©e - green
                                    '#ef4444'  // Annul√©e - red
                                ],
                                borderWidth: 3,
                                borderColor: '#fff',
                                hoverOffset: 10
                            }]
                        },
                        options: {
                            ...commonOptions,
                            cutout: '65%',
                            plugins: {
                                ...commonOptions.plugins,
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const label = context.label || '';
                                            const value = context.parsed || 0;
                                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                            const percentage = ((value / total) * 100).toFixed(1);
                                            return label + ': ' + value + ' (' + percentage + '%)';
                                        }
                                    }
                                }
                            }
                        }
                    });
                })
                .catch(error => {
                    console.error('Error loading orders status:', error);
                });

            // Graphique des R√©servations par Statut (Donut)
            fetch('{{ path('app_profile_reservations_by_status') }}')
                .then(response => {
                    if (!response.ok || !response.headers.get('content-type')?.includes('application/json')) {
                        throw new Error('Erreur de chargement');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('User Reservations data:', data);
                    const canvas = document.getElementById('reservationsStatusChart');
                    
                    if (!canvas) {
                        console.error('Canvas reservationsStatusChart not found');
                        return;
                    }
                    
                    // V√©rifier si l'utilisateur a des r√©servations
                    const totalReservations = data.data.reduce((a, b) => a + b, 0);
                    if (totalReservations === 0) {
                        canvas.parentElement.innerHTML = '<p class="text-center text-muted p-4">Aucune r√©servation pour le moment</p>';
                        return;
                    }
                    
                    const ctx = canvas.getContext('2d');
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: data.labels,
                            datasets: [{
                                data: data.data,
                                backgroundColor: [
                                    '#fbbf24', // En attente - yellow
                                    '#10b981', // Confirm√©e - green
                                    '#ef4444', // Annul√©e - red
                                    '#3b82f6'  // Termin√©e - blue
                                ],
                                borderWidth: 3,
                                borderColor: '#fff',
                                hoverOffset: 10
                            }]
                        },
                        options: {
                            ...commonOptions,
                            cutout: '65%',
                            plugins: {
                                ...commonOptions.plugins,
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const label = context.label || '';
                                            const value = context.parsed || 0;
                                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                            const percentage = ((value / total) * 100).toFixed(1);
                                            return label + ': ' + value + ' (' + percentage + '%)';
