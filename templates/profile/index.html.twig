{% extends 'base.html.twig' %}

{% block title %}Mon Dashboard{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4 dashboard-premium">
    <!-- Header Premium avec Avatar -->
    <div class="dashboard-header mb-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-wrapper">
                        {% if user.avatar %}
                            {% if user.avatar starts with 'http' %}
                                <img src="{{ user.avatar }}" alt="{{ user.fullName }}">
                            {% else %}
                                <img src="{{ asset('uploads/' ~ user.avatar) }}" alt="{{ user.fullName }}">
                            {% endif %}
                        {% else %}
                            <div class="avatar-default">
                                <span class="avatar-initials">{{ user.prenom|slice(0,1)|upper }}{{ user.nom|slice(0,1)|upper }}</span>
                            </div>
                        {% endif %}
                    </div>
                    <div>
                        <h1 class="display-5 mb-1 fw-bold">Bonjour, {{ user.fullName }} üëã</h1>
                        <p class="text-muted mb-0">
                            {% if not (user.email starts with 'facebook_' and user.email ends with '@noemail.local') %}
                                <i class="bi bi-envelope-fill me-2"></i>{{ user.email }}
                            {% endif %}
                            <span class="ms-3 badge bg-primary">
                                <i class="bi bi-star-fill me-1"></i>Client
                            </span>
                            {% if user.googleId %}
                                <span class="ms-2 badge" style="background-color: #ea4335;">
                                    <i class="bi bi-google me-1"></i>Google
                                </span>
                            {% endif %}
                            {% if user.facebookId %}
                                <span class="ms-2 badge" style="background-color: #1877f2;">
                                    <i class="bi bi-facebook me-1"></i>Facebook
                                </span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-end">
                <div class="date-badge">
                    <i class="bi bi-clock me-2"></i>{{ 'now'|date('H:i') }}
                    <span class="mx-2">‚Ä¢</span>
                    <i class="bi bi-calendar-event me-2"></i>{{ 'now'|date('d M Y') }}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques Cards Premium -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-info">
                <div class="stat-card-icon">
                    <i class="bi bi-cart-check-fill"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-label">Mes Commandes</div>
                    <div class="stat-value">{{ stats.total_orders }}</div>
                    <div class="stat-progress">
                        <div class="stat-progress-bar" style="width: 75%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-warning">
                <div class="stat-card-icon">
                    <i class="bi bi-calendar-event-fill"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-label">Mes R√©servations</div>
                    <div class="stat-value">{{ stats.total_reservations }}</div>
                    <div class="stat-detail">
                        <i class="bi bi-clock-history me-1"></i>
                        {{ stats.pending_reservations }} en attente
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-success">
                <div class="stat-card-icon">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-label">Total D√©pens√©</div>
                    <div class="stat-value">{{ stats.total_spent|number_format(0, ',', ' ') }} ‚Ç¨</div>
                    <div class="stat-progress">
                        <div class="stat-progress-bar" style="width: 90%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-primary">
                <div class="stat-card-icon">
                    <i class="bi bi-person-badge-fill"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-label">Mon Profil</div>
                    <div class="stat-value-small">Actif</div>
                    <div class="stat-detail">
                        <i class="bi bi-check-circle-fill me-1"></i>
                        Compte v√©rifi√©
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu Actions Premium -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <a href="{{ path('app_profile_edit') }}" class="action-card-link">
                <div class="action-card action-card-blue">
                    <div class="action-card-icon">
                        <i class="bi bi-person-gear"></i>
                    </div>
                    <div class="action-card-content">
                        <h4>Modifier mon Profil</h4>
                        <p>Mettre √† jour mes informations</p>
                    </div>
                    <div class="action-card-arrow">
                        <i class="bi bi-arrow-right"></i>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="{{ path('app_profile_reservations') }}" class="action-card-link">
                <div class="action-card action-card-orange">
                    <div class="action-card-icon">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                    <div class="action-card-content">
                        <h4>Mes R√©servations</h4>
                        <p>G√©rer mes r√©servations</p>
                    </div>
                    <div class="action-card-arrow">
                        <i class="bi bi-arrow-right"></i>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="{{ path('app_profile_orders') }}" class="action-card-link">
                <div class="action-card action-card-green">
                    <div class="action-card-icon">
                        <i class="bi bi-bag-check"></i>
                    </div>
                    <div class="action-card-content">
                        <h4>Mes Commandes</h4>
                        <p>Suivre mes commandes</p>
                    </div>
                    <div class="action-card-arrow">
                        <i class="bi bi-arrow-right"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Activit√© R√©cente Premium -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="activity-card">
                <div class="activity-header">
                    <h5><i class="bi bi-clock-history me-2"></i>Derni√®res Commandes</h5>
                    <span class="activity-badge">{{ recent_orders|length }}</span>
                </div>
                <div class="activity-body">
                    {% if recent_orders is empty %}
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>Vous n'avez pas encore pass√© de commande</p>
                            <a href="{{ path('app_product_index') }}" class="btn btn-primary btn-sm rounded-pill mt-2">
                                <i class="bi bi-grid me-1"></i>D√©couvrir nos produits
                            </a>
                        </div>
                    {% else %}
                        {% for order in recent_orders %}
                            <div class="activity-item">
                                <div class="activity-item-icon bg-info">
                                    <i class="bi bi-bag-check"></i>
                                </div>
                                <div class="activity-item-content">
                                    <div class="activity-item-title">#{{ order.numeroCommande }}</div>
                                    <div class="activity-item-subtitle">{{ order.createdAt|date('d/m/Y H:i') }}</div>
                                </div>
                                <div class="activity-item-meta">
                                    <div class="activity-item-amount">{{ order.montantTotal|number_format(2, ',', ' ') }} ‚Ç¨</div>
                                    {% if order.statut == 'en_attente' %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% elseif order.statut == 'validee' %}
                                        <span class="badge bg-info">Valid√©e</span>
                                    {% elseif order.statut == 'en_preparation' %}
                                        <span class="badge bg-primary">En pr√©paration</span>
                                    {% elseif order.statut == 'livree' %}
                                        <span class="badge bg-success">Livr√©e</span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                        <div class="activity-footer">
                            <a href="{{ path('app_profile_orders') }}" class="btn btn-outline-primary btn-sm rounded-pill">
                                Voir toutes mes commandes <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="activity-card">
                <div class="activity-header">
                    <div class="d-flex align-items-center gap-2">
                        <div class="header-icon-mini bg-warning">
                            <i class="bi bi-calendar-check-fill"></i>
                        </div>
                        <h5 class="mb-0">Prochaines R√©servations</h5>
                    </div>
                    <span class="activity-badge-premium bg-warning">{{ upcoming_reservations|length }}</span>
                </div>
                <div class="activity-body">
                    {% if upcoming_reservations is empty %}
                        <div class="empty-state-premium">
                            <div class="empty-icon">
                                <i class="bi bi-calendar-x"></i>
                            </div>
                            <p class="empty-text">Aucune r√©servation √† venir</p>
                            <a href="{{ path('app_home') }}" class="btn btn-warning rounded-pill px-4">
                                <i class="bi bi-calendar-plus me-2"></i>Faire une r√©servation
                            </a>
                        </div>
                    {% else %}
                        {% for reservation in upcoming_reservations %}
                            <div class="reservation-item-premium">
                                <div class="reservation-icon-box">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                                <div class="reservation-content">
                                    <div class="reservation-header">
                                        <div class="reservation-people">
                                            <i class="bi bi-people-fill me-1"></i>
                                            <strong>{{ reservation.nombrePersonnes }}</strong> personne{{ reservation.nombrePersonnes > 1 ? 's' : '' }}
                                        </div>
                                        <div class="reservation-status">
                                            {% if reservation.statut == 'en_attente' %}
                                                <span class="badge-premium badge-warning">
                                                    <i class="bi bi-clock-history me-1"></i>En attente
                                                </span>
                                            {% elseif reservation.statut == 'confirmee' %}
                                                <span class="badge-premium badge-success">
                                                    <i class="bi bi-check-circle-fill me-1"></i>Confirm√©e
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="reservation-datetime">
                                        <div class="datetime-badge">
                                            <i class="bi bi-calendar3"></i>
                                            <span>{{ reservation.dateReservation|date('d M Y') }}</span>
                                        </div>
                                        <div class="datetime-badge">
                                            <i class="bi bi-clock"></i>
                                            <span>{{ reservation.heureReservation|date('H:i') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="activity-footer-premium">
                            <a href="{{ path('app_profile_reservations') }}" class="btn btn-outline-warning rounded-pill px-4">
                                Toutes mes r√©servations <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Dashboard Premium Styles */
        .dashboard-premium {
            background: var(--background-alt);
            min-height: 100vh;
        }

        /* Header avec Avatar */
        .dashboard-header {
            background: linear-gradient(135deg, rgba(59,130,246,0.08), rgba(147,197,253,0.08));
            padding: 2rem;
            border-radius: 20px;
            border-left: 5px solid var(--primary-color);
        }

        .avatar-wrapper {
            width: 80px;
            height: 80px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(59,130,246,0.3);
            background: linear-gradient(135deg, var(--primary-color), #60a5fa);
            display: flex;
            align-items: center;
            justify-content: center;
            animation: pulse 2s ease-in-out infinite;
        }

        .avatar-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .avatar-wrapper i {
            font-size: 2.5rem;
            color: white;
        }

        .avatar-default {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
        }

        .avatar-initials {
            font-size: 2rem;
            font-weight: 700;
            color: white;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .date-badge {
            background: var(--surface);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            color: var(--text-primary);
            box-shadow: var(--shadow);
        }

        /* Stat Cards - Style identique Admin */
        .stat-card {
            background: white;
            border-radius: 24px;
            padding: 2rem;
            position: relative;
            overflow: hidden;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid rgba(0,0,0,0.05);
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            height: 100%;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, transparent, currentColor, transparent);
            transform: scaleX(0);
            transition: transform 0.5s ease;
        }

        .stat-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 30px 60px rgba(0,0,0,0.15);
            border-color: currentColor;
        }

        .stat-card:hover::before {
            transform: scaleX(1);
        }

        /* Couleurs des cartes */
        .stat-card-primary { color: #3b82f6; }
        .stat-card-primary:hover { background: linear-gradient(135deg, rgba(59,130,246,0.05), rgba(147,197,253,0.1)); }
        
        .stat-card-success { color: #22c55e; }
        .stat-card-success:hover { background: linear-gradient(135deg, rgba(34,197,94,0.05), rgba(134,239,172,0.1)); }
        
        .stat-card-info { color: #0ea5e9; }
        .stat-card-info:hover { background: linear-gradient(135deg, rgba(14,165,233,0.05), rgba(125,211,252,0.1)); }
        
        .stat-card-warning { color: #f59e0b; }
        .stat-card-warning:hover { background: linear-gradient(135deg, rgba(245,158,11,0.05), rgba(253,186,116,0.1)); }

        /* Ic√¥nes des cartes - Style identique Admin */
        .stat-card-icon {
            width: 80px;
            height: 80px;
            background: currentColor;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 25px currentColor;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .stat-card-icon::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
            transform: rotate(45deg);
            animation: iconShine 3s infinite;
        }

        @keyframes iconShine {
            0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .stat-card:hover .stat-card-icon {
            transform: scale(1.15) rotate(-10deg);
            box-shadow: 0 15px 40px currentColor;
        }

        .stat-card-content {
            position: relative;
            z-index: 1;
        }

        /* Labels et valeurs */
        .stat-label {
            font-size: 0.85rem;
            color: #64748b;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin-bottom: 0.75rem;
        }

        .stat-value {
            font-size: 3rem;
            font-weight: 900;
            color: #1e293b;
            margin-bottom: 0.75rem;
            line-height: 1;
            transition: all 0.3s ease;
        }

        .stat-value-small {
            font-size: 2.25rem;
            font-weight: 900;
            color: #1e293b;
            margin-bottom: 0.75rem;
            line-height: 1;
        }

        .stat-card:hover .stat-value,
        .stat-card:hover .stat-value-small {
            color: currentColor;
            transform: scale(1.05);
        }

        .stat-detail {
            font-size: 0.9rem;
            color: #64748b;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(0,0,0,0.03);
            border-radius: 12px;
            margin-top: 1rem;
        }

        .stat-detail i {
            color: currentColor;
            font-size: 1.1rem;
        }

        /* Barres de progression */
        .stat-progress {
            height: 8px;
            background: rgba(0,0,0,0.06);
            border-radius: 10px;
            margin-top: 1rem;
            overflow: hidden;
            position: relative;
        }

        .stat-progress-bar {
            height: 100%;
            background: currentColor;
            border-radius: 10px;
            transition: width 1.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            box-shadow: 0 2px 8px currentColor;
        }

        .stat-progress-bar::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.5), transparent);
            animation: progressShine 2s ease-in-out infinite;
        }

        @keyframes progressShine {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        /* Action Cards */
        .action-card-link {
            text-decoration: none;
            display: block;
        }

        .action-card {
            background: var(--surface);
            border-radius: 20px;
            padding: 2rem;
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid var(--border-color);
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, currentColor, transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .action-card:hover {
            transform: translateX(8px);
            box-shadow: 0 16px 32px rgba(0,0,0,0.12);
            border-color: currentColor;
        }

        .action-card:hover::before {
            opacity: 0.05;
        }

        .action-card-blue { color: #3b82f6; }
        .action-card-green { color: #22c55e; }
        .action-card-orange { color: #f59e0b; }

        .action-card-icon {
            font-size: 3rem;
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, rgba(59,130,246,0.1), rgba(59,130,246,0.05));
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .action-card-content {
            flex: 1;
        }

        .action-card-content h4 {
            color: var(--text-primary);
            margin-bottom: 0.5rem;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .action-card-content p {
            color: var(--text-secondary);
            margin: 0;
            font-size: 0.9rem;
        }

        .action-card-arrow {
            font-size: 1.5rem;
            opacity: 0;
            transform: translateX(-10px);
            transition: all 0.3s ease;
        }

        .action-card:hover .action-card-arrow {
            opacity: 1;
            transform: translateX(0);
        }

        /* Activity Cards */
        .activity-card {
            background: var(--surface);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow);
            border: 2px solid var(--border-color);
        }

        .activity-header {
            padding: 1.5rem;
            background: var(--background-alt);
            border-bottom: 2px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .activity-header h5 {
            margin: 0;
            font-weight: 700;
            color: var(--text-primary);
        }

        .activity-badge {
            background: var(--primary-color);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 700;
        }

        .activity-body {
            padding: 1rem;
            max-height: 450px;
            overflow-y: auto;
        }

        .activity-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .activity-item:hover {
            background: var(--background-alt);
            transform: translateX(4px);
        }

        .activity-item-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            flex-shrink: 0;
        }

        .activity-item-content {
            flex: 1;
        }

        .activity-item-title {
            font-weight: 700;
            color: var(--text-primary);
            font-size: 0.95rem;
        }

        .activity-item-subtitle {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        .activity-item-meta {
            text-align: right;
        }

        .activity-item-amount {
            font-weight: 700;
            color: var(--text-primary);
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .activity-footer {
            text-align: center;
            padding: 1rem;
            border-top: 2px solid var(--border-color);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

        /* Empty State Premium */
        .empty-state-premium {
            text-align: center;
            padding: 3rem 1.5rem;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, rgba(245,158,11,0.1), rgba(251,191,36,0.1));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: #f59e0b;
        }

        .empty-text {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        /* Header Icon Mini */
        .header-icon-mini {
            width: 40px;
