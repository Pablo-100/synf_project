{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5"><i class="bi bi-person-gear"></i> Modifier mon profil</h1>
        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au Dashboard
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Mes Informations</h3>
                </div>
                <div class="card-body">
                    {{ form_start(profileForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(profileForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(profileForm.nom) }}
                                {{ form_errors(profileForm.nom) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(profileForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(profileForm.prenom) }}
                                {{ form_errors(profileForm.prenom) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(profileForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(profileForm.email) }}
                            {{ form_errors(profileForm.email) }}
                            <small class="form-text text-muted">L'email ne peut pas être modifié</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(profileForm.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(profileForm.telephone) }}
                            {{ form_errors(profileForm.telephone) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(profileForm.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(profileForm.adresse) }}
                            {{ form_errors(profileForm.adresse) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(profileForm.avatarFile, null, {'label_attr': {'class': 'form-label'}}) }}
                            {% if user.avatar %}
                                <div class="mb-2">
                                    <img src="{{ asset('uploads/' ~ user.avatar) }}" alt="Avatar" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                                    <p class="text-muted small mt-1">Photo actuelle</p>
                                </div>
                            {% endif %}
                            {{ form_widget(profileForm.avatarFile) }}
                            {{ form_errors(profileForm.avatarFile) }}
                            <small class="form-text text-muted">Format accepté : JPEG, PNG, GIF, WebP. Taille max : 2 Mo</small>
                        </div>

                        <hr class="my-4">

                        <h5 class="mb-3"><i class="bi bi-key"></i> Changer le mot de passe</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(profileForm.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(profileForm.plainPassword.first) }}
                                {{ form_errors(profileForm.plainPassword.first) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(profileForm.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(profileForm.plainPassword.second) }}
                                {{ form_errors(profileForm.plainPassword.second) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(profileForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
