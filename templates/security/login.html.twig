{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <h2 class="text-center mb-4">Se connecter</h2>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.request.get('oauth_error') %}
                        <div class="alert alert-danger">Échec de connexion avec les réseaux sociaux. Veuillez réessayer.</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}.</div>
                        <a class="btn btn-outline-secondary w-100" href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% else %}
                        <form method="post" class="mb-4">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Adresse email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" name="_remember_me" id="rememberMe" checked>
                                <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <button class="btn btn-primary w-100" type="submit">Connexion</button>
                        </form>

                        <div class="text-center mb-3">
                            <span class="text-muted">ou</span>
                        </div>

                        <a href="{{ path('connect_google_start') }}" class="btn btn-outline-danger w-100 mb-3">
                            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" width="20" class="me-2 align-text-bottom">
                            Continuer avec Google
                        </a>

                        <a href="{{ path('connect_facebook_start') }}" class="btn btn-primary w-100 mb-3" style="background-color: #1877f2; border-color: #1877f2;">
                            <i class="bi bi-facebook me-2"></i>
                            Continuer avec Facebook
                        </a>

                        <div class="text-center">
                            <small class="text-muted">Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
