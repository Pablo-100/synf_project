                        // Update aria-expanded attribute
                        const isExpanded = navbarToggler.getAttribute('aria-expanded') === 'true';
                        navbarToggler.setAttribute('aria-expanded', !isExpanded);
                    });
                }
            });

            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar-premium');
                if (navbar) {
                    if (window.scrollY > 50) {
                        navbar.classList.add('scrolled');
                    } else {
                        navbar.classList.remove('scrolled');
                    }
                }
            });

            // Update cart count after page load (for redirects after adding to cart)
            document.addEventListener('DOMContentLoaded', function() {
                // Check if we just added an item to cart (via flash message)
                const successAlert = document.querySelector('.alert-success');
                if (successAlert && successAlert.textContent.includes('ajouté au panier')) {
                    updateCartBadge();
                }
            });

            // Function to update cart badge count
            function updateCartBadge() {
                fetch('{{ path('app_cart_count') }}')
                    .then(response => response.json())
                    .then(data => {
                        // Update desktop badge (navbar premium)
                        const badge = document.getElementById('cart-count');
                        if (badge) {
                            badge.textContent = data.count;
                            badge.classList.add('animate-pulse');
                            setTimeout(() => badge.classList.remove('animate-pulse'), 500);
                        }
                        
                        // Update mobile/logged-in badge
                        const badgeTop = document.getElementById('cart-count-top');
                        if (badgeTop) {
                            badgeTop.textContent = data.count;
                            badgeTop.classList.add('animate-pulse');
                            setTimeout(() => badgeTop.classList.remove('animate-pulse'), 500);
                        }
                    })
                    .catch(error => console.error('Error updating cart count:', error));
            }
        </script>
        
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</body>
</html>

