{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
<h1 class="mb-4">
    <i class="bi bi-grid"></i> Nos Produits
</h1>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="mb-0">Filtrer par catégorie :</h5>
                <div class="mt-2">
                    <a href="{{ path('app_product_index') }}" class="btn btn-sm btn-outline-primary me-2">Tous</a>
                    <a href="{{ path('app_product_category', {category: 'plat'}) }}" class="btn btn-sm btn-outline-primary me-2">Plats</a>
                    <a href="{{ path('app_product_category', {category: 'boisson'}) }}" class="btn btn-sm btn-outline-primary me-2">Boissons</a>
                    <a href="{{ path('app_product_category', {category: 'dessert'}) }}" class="btn btn-sm btn-outline-primary me-2">Desserts</a>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <span class="text-muted">{{ products|length }} produit(s) trouvé(s)</span>
            </div>
        </div>
    </div>
</div>

{% if products is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun produit disponible pour le moment.
    </div>
{% else %}
    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    {% if product.image %}
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.nom }}" style="height: 250px; object-fit: cover;">
                    {% else %}
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="bi bi-image display-1"></i>
                        </div>
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">{{ product.nom }}</h5>
                            {% if product.stock > 0 %}
                                <span class="badge bg-success">En stock</span>
                            {% else %}
                                <span class="badge bg-danger">Rupture</span>
                            {% endif %}
                        </div>
                        <span class="badge bg-primary mb-2 align-self-start">{{ product.categorie }}</span>
                        <p class="card-text flex-grow-1">{{ product.description|slice(0, 120) }}{% if product.description|length > 120 %}...{% endif %}</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h4 mb-0 text-primary">{{ product.prix }} €</span>
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-eye"></i> Détails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
