{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
<div class="shop-page-premium">
    <div class="container py-5">
        <!-- Header Premium -->
        <div class="page-header-premium mb-5">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="header-badge mb-3">
                        <i class="bi bi-grid-3x3-gap-fill me-2"></i>Notre Catalogue
                    </div>
                    <h1 class="page-title mb-3">
                        D√©couvrez nos <span class="gradient-text">produits</span>
                    </h1>
                    <p class="page-subtitle">Une s√©lection premium de produits frais et de qualit√©, livr√©s chez vous</p>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <div class="products-count-badge">
                        <div class="count-number">{{ products|length }}</div>
                        <div class="count-label">Produit{{ products|length > 1 ? 's' : '' }} disponible{{ products|length > 1 ? 's' : '' }}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters Premium -->
        <div class="filters-card-premium mb-5">
            <div class="filters-header">
                <i class="bi bi-funnel-fill me-2"></i>
                <span>Filtrer par cat√©gorie</span>
            </div>
            <div class="filters-body">
                <a href="#" class="filter-btn active" data-category="all">
                    <i class="bi bi-grid-fill me-2"></i>Tous les produits
                </a>
                <a href="#" class="filter-btn" data-category="plat">
                    <i class="bi bi-egg-fried me-2"></i>Plats
                </a>
                <a href="#" class="filter-btn" data-category="boisson">
                    <i class="bi bi-cup-straw me-2"></i>Boissons
                </a>
                <a href="#" class="filter-btn" data-category="dessert">
                    <i class="bi bi-cake2 me-2"></i>Desserts
                </a>
            </div>
        </div>

        <!-- Products Grid -->
        <div id="products-container">
        {% if products is empty %}
            <div class="empty-state-shop">
                <div class="empty-icon">üõí</div>
                <h3 class="empty-title">Aucun produit disponible</h3>
                <p class="empty-text">Nos produits arrivent bient√¥t. Revenez plus tard !</p>
                <a href="{{ path('app_home') }}" class="btn btn-primary btn-premium">
                    <i class="bi bi-house-fill me-2"></i>Retour √† l'accueil
                </a>
            </div>
        {% else %}
            <div class="row g-4">
                {% for product in products %}
                    <div class="col-lg-4 col-md-6">
                        <div class="product-card-shop" data-category="{{ product.categorie|lower }}">
                            <div class="product-image-container">
                                {% if product.image %}
                                    <img src="{{ asset('uploads/' ~ product.image) }}" 
                                         class="product-image-shop" 
                                         alt="{{ product.nom }}">
                                {% else %}
                                    <div class="product-image-placeholder-shop">
                                        <i class="bi bi-image placeholder-icon"></i>
                                    </div>
                                {% endif %}
                                
                                {% if product.stock > 0 %}
                                    <span class="stock-badge available">
                                        <i class="bi bi-check-circle-fill me-1"></i>En stock
                                    </span>
                                {% else %}
                                    <span class="stock-badge unavailable">
                                        <i class="bi bi-x-circle-fill me-1"></i>Rupture
                                    </span>
                                {% endif %}
                                
                                <div class="product-overlay-shop">
                                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-light btn-overlay">
                                        <i class="bi bi-eye-fill me-2"></i>Voir les d√©tails
                                    </a>
                                </div>
                            </div>
                            
                            <div class="product-body-shop">
                                <div class="product-header-shop">
                                    <span class="product-category-badge">{{ product.categorie }}</span>
                                    {% if product.stock < 5 and product.stock > 0 %}
                                        <span class="limited-badge">
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <h5 class="product-name-shop">{{ product.nom }}</h5>
                                
                                <p class="product-desc-shop">
                                    {{ product.description|length > 100 ? product.description|slice(0, 100) ~ '...' : product.description }}
                                </p>
                                
                                <div class="product-footer-shop">
                                    <div class="price-section">
                                        <span class="price-label">Prix</span>
                                        <span class="price-value">{{ product.prix|number_format(2, ',', ' ') }} ‚Ç¨</span>
                                    </div>
                                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-primary btn-shop">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        </div> <!-- Fin products-container -->
    </div>
</div>

{% block stylesheets %}
    {{ parent() }}
    <style>
        .shop-page-premium {
            background: linear-gradient(135deg, rgba(59,130,246,0.03) 0%, rgba(147,197,253,0.03) 100%);
            min-height: 100vh;
        }

        /* Page Header */
        .page-header-premium {
            position: relative;
        }

        .header-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background: rgba(59,130,246,0.1);
            border-radius: 50px;
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.85rem;
            animation: fadeInScale 0.6s ease-out;
        }

        .page-title {
            font-size: 3rem;
            font-weight: 800;
            color: var(--text-primary);
            animation: fadeInScale 0.8s ease-out 0.2s both;
        }

        .gradient-text {
            background: linear-gradient(135deg, #3b82f6, #0ea5e9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            font-size: 1.15rem;
            color: var(--text-secondary);
            animation: fadeInScale 1s ease-out 0.4s both;
        }

        .products-count-badge {
            display: inline-block;
            padding: 2rem 3rem;
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            border-radius: 20px;
            color: white;
            text-align: center;
            box-shadow: 0 10px 30px rgba(59,130,246,0.3);
            animation: fadeInScale 1.2s ease-out 0.6s both;
        }

        .count-number {
            font-size: 3rem;
            font-weight: 700;
            line-height: 1;
        }

        .count-label {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-top: 0.5rem;
        }

        /* Filters Card */
        .filters-card-premium {
            background: var(--surface);
            border-radius: 20px;
            border: 2px solid var(--border-color);
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        }

        .filters-header {
            padding: 1.5rem 2rem;
            background: var(--background-alt);
            border-bottom: 2px solid var(--border-color);
            font-weight: 600;
            font-size: 1.05rem;
            color: var(--text-primary);
            display: flex;
            align-items: center;
        }

        .filters-body {
            padding: 1.5rem 2rem;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .filter-btn {
            padding: 0.75rem 1.75rem;
            border-radius: 50px;
            border: 2px solid var(--border-color);
            background: var(--surface);
            color: var(--text-primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .filter-btn:hover {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59,130,246,0.3);
        }

        .filter-btn.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        /* Product Card Shop */
        .product-card-shop {
            background: var(--surface);
            border-radius: 20px;
            border: 2px solid var(--border-color);
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
            opacity: 1;
            transform: translateY(0);
        }

        .product-card-shop:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.12);
            border-color: var(--primary-color);
        }

        .product-image-container {
            position: relative;
            height: 280px;
            overflow: hidden;
        }

        .product-image-shop {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card-shop:hover .product-image-shop {
            transform: scale(1.1);
        }

        .product-image-placeholder-shop {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(59,130,246,0.1), rgba(147,197,253,0.1));
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .placeholder-icon {
            font-size: 4rem;
            color: rgba(59,130,246,0.3);
        }

        .stock-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
        }

        .stock-badge.available {
            background: rgba(34,197,94,0.9);
            color: white;
        }

        .stock-badge.unavailable {
            background: rgba(239,68,68,0.9);
            color: white;
        }

        .product-overlay-shop {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card-shop:hover .product-overlay-shop {
            opacity: 1;
        }

        .btn-overlay {
            border-radius: 50px;
            padding: 0.875rem 2rem;
            font-weight: 600;
        }

        .product-body-shop {
            padding: 1.75rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .product-header-shop {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .product-category-badge {
            padding: 0.375rem 0.875rem;
            background: rgba(59,130,246,0.1);
            color: var(--primary-color);
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .limited-badge {
            width: 28px;
            height: 28px;
            background: rgba(245,158,11,0.1);
            color: #f59e0b;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
        }

        .product-name-shop {
            font-size: 1.35rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        .product-desc-shop {
            font-size: 0.95rem;
            color: var(--text-secondary);
            line-height: 1.6;
            flex-grow: 1;
            margin-bottom: 1.5rem;
        }

        .product-footer-shop {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1.5rem;
            border-top: 2px solid var(--border-color);
        }

        .price-section {
            display: flex;
            flex-direction: column;
        }

        .price-label {
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-bottom: 0.25rem;
        }

        .price-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .btn-shop {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            font-size: 1.25rem;
            transition: all 0.3s ease;
        }

        .btn-shop:hover {
            transform: rotate(90deg) scale(1.1);
        }

        /* Empty State */
        .empty-state-shop {
            text-align: center;
            padding: 6rem 2rem;
        }

        .empty-icon {
            font-size: 8rem;
            opacity: 0.2;
            margin-bottom: 2rem;
        }

        .empty-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-secondary);
            margin-bottom: 1rem;
        }

        .empty-text {
            font-size: 1.1rem;
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .btn-premium {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-premium:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(59,130,246,0.3);
        }

        /* Animations */
        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: translateY(20px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Responsive */
        @media (max-width: 992px) {
            .page-title {
                font-size: 2.5rem;
            }
            
            .products-count-badge {
                margin-top: 2rem;
            }
        }

        @media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }
            
            .filters-body {
                padding: 1rem;
            }
            
            .filter-btn {
                padding: 0.625rem 1.25rem;
                font-size: 0.9rem;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterBtns = document.querySelectorAll('.filter-btn');
            const productsContainer = document.getElementById('products-container');
            const countBadge = document.querySelector('.count-number');
            const countLabel = document.querySelector('.count-label');
            
            filterBtns.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remove active class from all buttons
                    filterBtns.forEach(b => b.classList.remove('active'));
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    const category = this.getAttribute('data-category');
                    
                    // Show loading state
                    productsContainer.style.opacity = '0.5';
                    productsContainer.style.pointerEvents = 'none';
                    
                    // Filter products
                    filterProducts(category);
                });
            });
            
            function filterProducts(category) {
                const allProducts = document.querySelectorAll('.product-card-shop');
                let visibleCount = 0;
                
                // Simulate short loading
                setTimeout(() => {
                    allProducts.forEach(card => {
                        const productCategory = card.getAttribute('data-category');
                        
                        if (category === 'all' || productCategory === category) {
                            card.closest('.col-lg-4').style.display = 'block';
                            visibleCount++;
                            // Animate in
                            setTimeout(() => {
                                card.style.opacity = '1';
                                card.style.transform = 'translateY(0)';
                            }, 50);
                        } else {
                            card.style.opacity = '0';
                            card.style.transform = 'translateY(20px)';
                            setTimeout(() => {
                                card.closest('.col-lg-4').style.display = 'none';
                            }, 300);
                        }
                    });
                    
                    // Update count
                    if (countBadge) {
                        countBadge.textContent = visibleCount;
                    }
                    if (countLabel) {
                        countLabel.textContent = `Produit${visibleCount > 1 ? 's' : ''} disponible${visibleCount > 1 ? 's' : ''}`;
                    }
                    
                    // Remove loading state
                    productsContainer.style.opacity = '1';
                    productsContainer.style.pointerEvents = 'auto';
                    
                    // Show empty state if no products
                    const productGrid = productsContainer.querySelector('.row');
                    if (visibleCount === 0 && productGrid) {
                        if (!document.querySelector('.empty-state-filter')) {
                            productGrid.innerHTML = `
                                <div class="col-12 empty-state-filter">
                                    <div class="empty-state-shop">
                                        <div class="empty-icon">üîç</div>
                                        <h3 class="empty-title">Aucun produit trouv√©</h3>
                                        <p class="empty-text">Essayez une autre cat√©gorie</p>
                                    </div>
                                </div>
                            `;
                        }
                    } else if (visibleCount > 0) {
                        const emptyState = document.querySelector('.empty-state-filter');
                        if (emptyState) {
                            emptyState.remove();
                        }
                    }
                }, 200);
            }
        });
    </script>
{% endblock %}
{% endblock %}
