{% extends 'base.html.twig' %}

{% block title %}Recherche : {{ query }}{% endblock %}

{% block body %}
<h1 class="mb-4">
    <i class="bi bi-search"></i> Résultats de recherche pour "{{ query }}"
</h1>

{% if query is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Veuillez entrer un terme de recherche.
    </div>
{% elseif products is empty %}
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> Aucun produit trouvé pour "{{ query }}".
    </div>
    <div class="text-center">
        <a href="{{ path('app_product_index') }}" class="btn btn-primary">
            <i class="bi bi-grid"></i> Voir tous les produits
        </a>
    </div>
{% else %}
    <p class="lead">{{ products|length }} produit(s) trouvé(s)</p>
    
    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    {% if product.image %}
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.nom }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-image display-1"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nom }}</h5>
                        <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">{{ product.categorie }}</span>
                            <span class="h5 mb-0 text-primary">{{ product.prix }} €</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary w-100">
                            <i class="bi bi-eye"></i> Voir Détails
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
