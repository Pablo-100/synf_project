{% extends 'base.html.twig' %}

{% block title %}{{ product.nom }}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}">Produits</a></li>
        <li class="breadcrumb-item active">{{ product.nom }}</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-5">
        {% if product.image %}
            <img src="{{ asset('uploads/' ~ product.image) }}" class="img-fluid rounded shadow" alt="{{ product.nom }}">
        {% else %}
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                <i class="bi bi-image display-1"></i>
            </div>
        {% endif %}
    </div>
    
    <div class="col-lg-7">
        <h1 class="mb-3">{{ product.nom }}</h1>
        
        <div class="mb-3">
            <span class="badge bg-primary fs-6 me-2">{{ product.categorie }}</span>
            {% if product.disponible and product.stock > 0 %}
                <span class="badge bg-success fs-6">
                    <i class="bi bi-check-circle"></i> Disponible
                </span>
            {% else %}
                <span class="badge bg-danger fs-6">
                    <i class="bi bi-x-circle"></i> Indisponible
                </span>
            {% endif %}
        </div>
        
        <div class="mb-4">
            <h2 class="text-primary">{{ product.prix }} €</h2>
            {% if product.stock > 0 %}
                <p class="text-muted mb-0">
                    <i class="bi bi-box-seam"></i> Stock disponible : {{ product.stock }} unité(s)
                </p>
            {% endif %}
        </div>
        
        <div class="mb-4">
            <h4>Description</h4>
            <p class="lead">{{ product.description }}</p>
        </div>
        
        <div class="mb-4">
            <h5>Informations</h5>
            <ul class="list-unstyled">
                <li><i class="bi bi-calendar-plus text-primary"></i> Ajouté le : {{ product.createdAt|date('d/m/Y') }}</li>
                {% if product.updatedAt %}
                    <li><i class="bi bi-pencil text-primary"></i> Mis à jour le : {{ product.updatedAt|date('d/m/Y') }}</li>
                {% endif %}
            </ul>
        </div>
        
        {% if product.disponible and product.stock > 0 %}
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Commander ce produit</h5>
                    <div class="d-grid">
                        <a href="{{ path('app_cart_add', {id: product.id}) }}" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart-plus"></i> Ajouter au panier
                        </a>
                    </div>
                    {% if not app.user %}
                        <small class="text-muted d-block mt-2 text-center">
                            <i class="bi bi-info-circle"></i> Vous devez être connecté pour ajouter au panier
                        </small>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Ce produit n'est pas disponible actuellement.
            </div>
        {% endif %}
        
        <div class="mt-3">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
