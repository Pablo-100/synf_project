{% extends 'base.html.twig' %}

{% block title %}{{ product.nom }}{% endblock %}

{% block body %}
<div class="product-detail-page-premium">
    <div class="container py-4">
        <!-- Breadcrumb Premium -->
        <nav aria-label="breadcrumb" class="breadcrumb-premium mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}"><i class="bi bi-house-door-fill me-1"></i>Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}"><i class="bi bi-grid-fill me-1"></i>Produits</a></li>
                <li class="breadcrumb-item active">{{ product.nom }}</li>
            </ol>
        </nav>

        <div class="row g-5">
            <!-- Image Column -->
            <div class="col-lg-5">
                <div class="product-image-container">
                    {% if product.image %}
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="product-main-image" alt="{{ product.nom }}">
                    {% else %}
                        <div class="product-placeholder">
                            <i class="bi bi-image"></i>
                            <span>Image non disponible</span>
                        </div>
                    {% endif %}
                    
                    <!-- Stock Badge Floating -->
                    {% if product.disponible and product.stock > 0 %}
                        <div class="stock-floating-badge success">
                            <i class="bi bi-check-circle-fill me-2"></i>En stock
                        </div>
                    {% else %}
                        <div class="stock-floating-badge danger">
                            <i class="bi bi-x-circle-fill me-2"></i>Indisponible
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <!-- Details Column -->
            <div class="col-lg-7">
                <div class="product-details-premium">
                    <!-- Title & Category -->
                    <div class="mb-4">
                        <div class="category-badge mb-3">
                            <i class="bi bi-tag-fill me-2"></i>{{ product.categorie }}
                        </div>
                        <h1 class="product-title-detail">{{ product.nom }}</h1>
                    </div>
                    
                    <!-- Price Section -->
                    <div class="price-section mb-4">
                        <div class="price-box">
                            <div class="price-current">{{ product.prix }} €</div>
                            {% if product.stock > 0 %}
                                <div class="stock-info">
                                    <i class="bi bi-box-seam me-2"></i>
                                    <span>{{ product.stock }} unité(s) disponible(s)</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <!-- Description Section -->
                    <div class="description-section mb-4">
                        <h4 class="section-title">
                            <i class="bi bi-text-paragraph me-2"></i>Description
                        </h4>
                        <p class="description-text">{{ product.description }}</p>
                    </div>
                    
                    <!-- Info Section -->
                    <div class="info-section mb-4">
                        <h5 class="section-title-sm">
                            <i class="bi bi-info-circle-fill me-2"></i>Informations
                        </h5>
                        <ul class="info-list">
                            <li>
                                <i class="bi bi-calendar-plus text-primary"></i>
                                <span>Ajouté le <strong>{{ product.createdAt|date('d/m/Y') }}</strong></span>
                            </li>
                            {% if product.updatedAt %}
                                <li>
                                    <i class="bi bi-pencil text-primary"></i>
                                    <span>Mis à jour le <strong>{{ product.updatedAt|date('d/m/Y') }}</strong></span>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    
                    <!-- Action Card -->
                    {% if product.disponible and product.stock > 0 %}
                        <div class="action-card-premium">
                            <div class="action-header">
                                <i class="bi bi-cart-check-fill me-2"></i>
                                Commander ce produit
                            </div>
                            <button type="button" class="btn btn-primary btn-premium-lg add-to-cart-btn" data-product-id="{{ product.id }}">
                                <i class="bi bi-cart-plus me-2"></i>Ajouter au panier
                            </button>
                            {% if not app.user %}
                                <div class="login-notice">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Vous devez être connecté pour ajouter au panier
                                </div>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="unavailable-card">
                            <i class="bi bi-exclamation-triangle"></i>
                            <div>Ce produit n'est pas disponible actuellement.</div>
                        </div>
                    {% endif %}
                    
                    <!-- Back Button -->
                    <div class="mt-4">
                        <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary btn-premium-back">
                            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-detail-page-premium {
            background: linear-gradient(135deg, rgba(59,130,246,0.03) 0%, rgba(147,197,253,0.03) 100%);
            min-height: 100vh;
        }

        /* Breadcrumb Premium */
        .breadcrumb-premium .breadcrumb {
            background: var(--surface);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            border: 2px solid var(--border-color);
            box-shadow: var(--shadow-sm);
        }

        .breadcrumb-premium .breadcrumb-item + .breadcrumb-item::before {
            content: '›';
            font-size: 1.2rem;
            color: var(--text-secondary);
        }

        .breadcrumb-premium .breadcrumb-item a {
            color: var(--primary-color);
            font-weight: 600;
            text-decoration: none;
            transition: var(--transition);
        }

        .breadcrumb-premium .breadcrumb-item a:hover {
            color: var(--primary-hover);
        }

        .breadcrumb-premium .breadcrumb-item.active {
            color: var(--text-secondary);
            font-weight: 500;
        }

        /* Image Container */
        .product-image-container {
            position: relative;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.12);
            border: 3px solid var(--border-color);
            background: var(--surface);
        }

        .product-main-image {
            width: 100%;
            height: auto;
            display: block;
            transition: var(--transition);
        }

        .product-image-container:hover .product-main-image {
            transform: scale(1.05);
        }

        .product-placeholder {
            width: 100%;
            height: 500px;
            background: linear-gradient(135deg, var(--background-alt), #e2e8f0);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
        }

        .product-placeholder i {
            font-size: 5rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .stock-floating-badge {
            position: absolute;
            top: 1.5rem;
            right: 1.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.95rem;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            animation: fadeInScale 0.6s ease-out;
        }

        .stock-floating-badge.success {
            background: rgba(34,197,94,0.95);
            color: white;
        }

        .stock-floating-badge.danger {
            background: rgba(239,68,68,0.95);
            color: white;
        }

        /* Product Details */
        .product-details-premium {
            background: var(--surface);
            padding: 2.5rem;
            border-radius: 24px;
            border: 2px solid var(--border-color);
            box-shadow: var(--shadow-lg);
        }

        .category-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background: rgba(59,130,246,0.1);
            color: var(--primary-color);
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .product-title-detail {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--text-primary);
            line-height: 1.2;
            margin: 0;
        }

        /* Price Section */
        .price-section {
            padding: 1.5rem;
            background: linear-gradient(135deg, rgba(59,130,246,0.05), rgba(147,197,253,0.05));
            border-radius: 16px;
            border: 2px solid rgba(59,130,246,0.2);
        }

        .price-box {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .price-current {
            font-size: 3rem;
            font-weight: 800;
            color: var(--primary-color);
            line-height: 1;
        }

        .stock-info {
            display: flex;
            align-items: center;
            color: var(--text-secondary);
            font-weight: 600;
        }

        /* Description Section */
        .description-section {
            padding: 1.5rem;
            background: var(--background-alt);
            border-radius: 16px;
            border: 2px solid var(--border-color);
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        .section-title i {
            color: var(--primary-color);
        }

        .description-text {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text-secondary);
            margin: 0;
        }

        /* Info Section */
        .info-section {
            padding: 1.5rem;
            background: var(--background-alt);
            border-radius: 16px;
            border: 2px solid var(--border-color);
        }

        .section-title-sm {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        .info-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .info-list li {
            padding: 0.75rem 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--text-secondary);
            font-size: 1rem;
        }

        .info-list li i {
            font-size: 1.25rem;
        }

        /* Action Card */
        .action-card-premium {
            padding: 2rem;
            background: linear-gradient(135deg, rgba(59,130,246,0.08), rgba(147,197,253,0.08));
            border-radius: 20px;
            border: 3px solid var(--primary-color);
            box-shadow: 0 12px 32px rgba(59,130,246,0.15);
        }

        .action-header {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }

        .action-header i {
            color: var(--primary-color);
        }

        .btn-premium-lg {
            width: 100%;
            padding: 1.25rem 2rem;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 14px;
            transition: var(--transition);
        }

        .btn-premium-lg:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 32px rgba(59,130,246,0.4);
        }

        .login-notice {
            text-align: center;
            margin-top: 1rem;
            color: var(--text-secondary);
            font-size: 0.95rem;
            padding: 0.75rem;
            background: rgba(255,255,255,0.5);
            border-radius: 10px;
        }

        /* Unavailable Card */
        .unavailable-card {
            padding: 2rem;
            background: linear-gradient(135deg, rgba(245,158,11,0.08), rgba(251,191,36,0.08));
            border-radius: 20px;
            border: 3px solid var(--warning);
            display: flex;
            align-items: center;
            gap: 1rem;
            color: var(--warning);
            font-weight: 700;
            font-size: 1.1rem;
        }

        .unavailable-card i {
            font-size: 2rem;
        }

        /* Back Button */
        .btn-premium-back {
            padding: 0.875rem 1.75rem;
            border-radius: 12px;
            font-weight: 600;
            transition: var(--transition);
        }

        .btn-premium-back:hover {
            transform: translateX(-5px);
        }

        /* Responsive */
        @media (max-width: 992px) {
            .product-title-detail {
                font-size: 2rem;
            }
            
            .price-current {
                font-size: 2.5rem;
            }
            
            .product-details-premium {
                padding: 1.5rem;
            }
        }

        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addToCartBtn = document.querySelector('.add-to-cart-btn');
            
            if (addToCartBtn) {
                addToCartBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const productId = this.dataset.productId;
                    const btn = this;
                    const originalContent = btn.innerHTML;
                    
                    // Disable button and show loading
                    btn.disabled = true;
                    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Ajout...';
                    
                    // Send AJAX request
                    fetch(`{{ path('app_cart_add_ajax', {id: 0}) }}`.replace('/0', '/' + productId), {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Update both cart count badges
                            const cartBadge = document.getElementById('cart-count');
                            if (cartBadge) {
                                cartBadge.textContent = data.cartCount;
                                cartBadge.classList.add('animate-pulse');
                                setTimeout(() => cartBadge.classList.remove('animate-pulse'), 500);
                            }
                            
                            const cartBadgeTop = document.getElementById('cart-count-top');
                            if (cartBadgeTop) {
                                cartBadgeTop.textContent = data.cartCount;
                                cartBadgeTop.classList.add('animate-pulse');
                                setTimeout(() => cartBadgeTop.classList.remove('animate-pulse'), 500);
                            }
                            
                            // Show success message
                            btn.innerHTML = '<i class="bi bi-check-circle"></i> Ajouté !';
                            btn.classList.remove('btn-primary');
                            btn.classList.add('btn-success');
                            
                            // Reset button after 2 seconds
                            setTimeout(() => {
                                btn.innerHTML = originalContent;
                                btn.classList.remove('btn-success');
                                btn.classList.add('btn-primary');
                                btn.disabled = false;
                            }, 2000);
                        } else {
                            // Show error
                            alert(data.message || 'Erreur lors de l\'ajout au panier');
                            btn.innerHTML = originalContent;
                            btn.disabled = false;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Erreur lors de l\'ajout au panier');
                        btn.innerHTML = originalContent;
                        btn.disabled = false;
                    });
                });
            }
        });
    </script>
{% endblock %}
