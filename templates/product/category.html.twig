{% extends 'base.html.twig' %}

{% block title %}{{ category|capitalize }}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}">Produits</a></li>
        <li class="breadcrumb-item active">{{ category|capitalize }}</li>
    </ol>
</nav>

<h1 class="mb-4">
    <i class="bi bi-tag"></i> Catégorie : {{ category|capitalize }}
</h1>

{% if products is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun produit dans cette catégorie.
    </div>
    <div class="text-center">
        <a href="{{ path('app_product_index') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Retour à tous les produits
        </a>
    </div>
{% else %}
    <p class="lead">{{ products|length }} produit(s) dans cette catégorie</p>
    
    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    {% if product.image %}
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.nom }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-image display-1"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nom }}</h5>
                        <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0 text-primary">{{ product.prix }} €</span>
                            {% if product.stock > 0 %}
                                <span class="badge bg-success">En stock</span>
                            {% else %}
                                <span class="badge bg-danger">Rupture</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary w-100">
                            <i class="bi bi-eye"></i> Voir Détails
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
