{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="auth-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <!-- Header Premium -->
                <div class="text-center mb-4">
                    <div class="auth-icon-wrapper mb-3">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h1 class="display-5 fw-bold mb-2">Rejoignez-nous !</h1>
                    <p class="text-muted">Créez votre compte en quelques secondes</p>
                </div>

                <!-- Card Premium -->
                <div class="auth-card">
                    <div class="auth-card-body">
                        {{ form_start(registrationForm, {'attr': {'id': 'registerForm'}}) }}
                        
                        <div class="row g-4">
                            <!-- Nom & Prénom -->
                            <div class="col-md-6">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-person-badge-fill me-2"></i>{{ registrationForm.nom.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        {{ form_widget(registrationForm.nom, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': 'Votre nom'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.nom) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-person-badge-fill me-2"></i>{{ registrationForm.prenom.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-person-badge"></i>
                                        </span>
                                        {{ form_widget(registrationForm.prenom, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': 'Votre prénom'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.prenom) }}
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-12">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-envelope-fill me-2"></i>{{ registrationForm.email.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-at"></i>
                                        </span>
                                        {{ form_widget(registrationForm.email, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': 'votre@email.com'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                            </div>

                            <!-- Téléphone -->
                            <div class="col-12">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-telephone-fill me-2"></i>{{ registrationForm.telephone.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-phone"></i>
                                        </span>
                                        {{ form_widget(registrationForm.telephone, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': '06 12 34 56 78'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.telephone) }}
                                </div>
                            </div>

                            <!-- Adresse -->
                            <div class="col-12">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-geo-alt-fill me-2"></i>{{ registrationForm.adresse.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-house"></i>
                                        </span>
                                        {{ form_widget(registrationForm.adresse, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': 'Votre adresse complète'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.adresse) }}
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-lock-fill me-2"></i>{{ registrationForm.plainPassword.first.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-shield-lock"></i>
                                        </span>
                                        {{ form_widget(registrationForm.plainPassword.first, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': '••••••••'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.plainPassword.first) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-field-premium">
                                    <label class="form-label-premium">
                                        <i class="bi bi-lock-fill me-2"></i>{{ registrationForm.plainPassword.second.vars.label }}
                                    </label>
                                    <div class="input-group input-group-premium-auth">
                                        <span class="input-group-text">
                                            <i class="bi bi-shield-check"></i>
                                        </span>
                                        {{ form_widget(registrationForm.plainPassword.second, {
                                            'attr': {
                                                'class': 'form-control form-control-premium-auth',
                                                'placeholder': '••••••••'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(registrationForm.plainPassword.second) }}
                                </div>
                            </div>

                            <!-- Terms -->
                            <div class="col-12">
                                <div class="form-check-premium">
                                    {{ form_widget(registrationForm.agreeTerms, {
                                        'attr': {
                                            'class': 'form-check-input-premium'
                                        }
                                    }) }}
                                    <label class="form-check-label-premium" for="{{ registrationForm.agreeTerms.vars.id }}">
                                        <i class="bi bi-shield-check me-1"></i>
                                        J'accepte les <a href="#" class="text-success text-decoration-none fw-semibold">conditions d'utilisation</a>
                                    </label>
                                </div>
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-premium w-100 mt-4">
                            <i class="bi bi-check-circle me-2"></i>Créer mon compte
                        </button>

                        <div class="divider-premium">
                            <span>ou</span>
                        </div>

                        <a href="{{ path('connect_google_start') }}" class="btn btn-outline-danger btn-premium w-100 mb-3">
                            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" width="20" class="me-2 align-text-bottom">
                            Continuer avec Google
                        </a>

                        <a href="{{ path('connect_facebook_start') }}" class="btn btn-premium w-100 mb-3" style="background-color: #1877f2; border-color: #1877f2; color: white;">
                            <i class="bi bi-facebook me-2"></i>
                            Continuer avec Facebook
                        </a>

                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-premium w-100">
                            <i class="bi bi-box-arrow-in-right me-2"></i>J'ai déjà un compte
                        </a>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>

                <!-- Footer Link -->
                <div class="text-center mt-4">
                    <a href="{{ path('app_home') }}" class="text-muted text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i>Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Auth Page Styles */
        .auth-page {
            background: linear-gradient(135deg, rgba(34,197,94,0.05) 0%, rgba(134,239,172,0.05) 100%);
            min-height: 100vh;
        }

        .auth-icon-wrapper {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #22c55e, #4ade80);
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(34,197,94,0.3);
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .auth-card {
            background: var(--surface);
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.08);
            border: 2px solid var(--border-color);
            overflow: hidden;
        }

        .auth-card-body {
            padding: 2.5rem;
        }

        .form-label-premium {
            font-weight: 600;
            font-size: 0.95rem;
            color: var(--text-primary);
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }

        .form-label-premium i {
            color: #22c55e;
        }

        .form-field-premium {
            position: relative;
        }

        .input-group-premium-auth {
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border-radius: 14px;
            overflow: hidden;
        }

        .input-group-premium-auth .input-group-text {
            background: var(--background-alt);
            color: #22c55e;
            border: 2px solid var(--border-color);
            border-right: none;
            padding: 0.875rem 1rem;
        }

        .form-control-premium-auth {
            border: 2px solid var(--border-color);
            border-left: none;
            padding: 0.875rem 1.125rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: var(--surface);
            color: var(--text-primary);
        }

        .form-control-premium-auth:focus {
            border-color: #22c55e;
            box-shadow: 0 0 0 4px rgba(34,197,94,0.1);
            background: var(--surface);
            outline: none;
        }

        .input-group-premium-auth:focus-within .input-group-text {
            border-color: #22c55e;
            background: rgba(34,197,94,0.05);
        }

        .form-check-premium {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem;
            background: var(--background-alt);
            border-radius: 12px;
            border: 2px solid var(--border-color);
        }

        .form-check-input-premium {
            width: 20px;
            height: 20px;
            cursor: pointer;
            border: 2px solid var(--border-color);
        }

        .form-check-input-premium:checked {
            background-color: #22c55e;
            border-color: #22c55e;
        }

        .form-check-label-premium {
            font-size: 0.95rem;
            color: var(--text-primary);
            cursor: pointer;
            margin: 0;
        }

        .btn-premium {
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 14px;
            font-size: 1rem;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .btn-premium:hover {
            transform: translateY(-2px);
        }

        .btn-success.btn-premium:hover {
            box-shadow: 0 8px 24px rgba(34,197,94,0.4);
        }

        .btn-outline-primary.btn-premium {
            border-color: var(--primary-color);
        }

        .btn-outline-primary.btn-premium:hover {
            box-shadow: 0 8px 24px rgba(59,130,246,0.3);
        }

        .btn-outline-danger.btn-premium {
            border-color: #dc3545;
            color: #dc3545;
        }

        .btn-outline-danger.btn-premium:hover {
            background-color: #dc3545;
            color: white;
            box-shadow: 0 8px 24px rgba(220,53,69,0.3);
        }

        .divider-premium {
            text-align: center;
            position: relative;
            margin: 1.5rem 0;
        }

        .divider-premium::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: var(--border-color);
        }

        .divider-premium span {
            background: var(--surface);
            padding: 0 1rem;
            position: relative;
            color: var(--text-secondary);
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Facebook button hover effect */
        .btn-premium[style*="background-color: #1877f2"]:hover {
            background-color: #145dbf !important;
            border-color: #145dbf !important;
            box-shadow: 0 8px 24px rgba(24,119,242,0.4);
        }

        @media (max-width: 768px) {
            .auth-card-body {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}
{% endblock %}
